<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userInterface.Tab_Stats">
    <left>
        <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab id="companyListTab" fx:id="companyListTab" text="Firma">
                    <content>
                        <StackPane>
                            <children>
                                <ListView fx:id="companyList" prefHeight="814.0" prefWidth="578.0" />
                                <ProgressIndicator fx:id="statCompanyProgress" maxHeight="-Infinity" maxWidth="-Infinity" />
                            </children>
                        </StackPane>
                    </content>
                </Tab>
                <Tab id="branchListTab" fx:id="branchListTab" text="Branche">
                    <content>
                        <StackPane>
                            <children>
                                <ListView id="branchList" fx:id="branchList" prefHeight="583.0" prefWidth="550.0" />
                                <ProgressIndicator fx:id="statBranchProgress" maxHeight="-Infinity" maxWidth="-Infinity" />
                            </children>
                        </StackPane>
                    </content>
                </Tab>
            </tabs>
            <BorderPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </BorderPane.margin>
        </TabPane>
    </left>
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="statisticTableView" StackPane.alignment="CENTER_RIGHT">
                    <columns>
                        <TableColumn fx:id="statsDefectsColumn" maxWidth="-1.0" minWidth="150.0" prefWidth="-1.0" resizable="false" text="Mangel Nr." />
                        <TableColumn fx:id="statsDefectDescriptionColumn" maxWidth="700.0" minWidth="500.0" prefWidth="-1.0" text="Mangel Beschreibung" />
                        <TableColumn fx:id="statsQuantityColumn" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false" text="Anzahl" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <StackPane.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </StackPane.margin>
                </TableView>
                <ProgressIndicator fx:id="statResultProgress" maxHeight="50.0" maxWidth="50.0" prefHeight="50.0" prefWidth="50.0" />
            </children>
        </StackPane>
    </center>
    <right>
        <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Export" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets right="15.0" />
            </BorderPane.margin>
        </Button>
    </right>
</BorderPane>
